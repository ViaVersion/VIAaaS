{
  "compilerOptions": {
    "target": "ES2018",
    "module": "ES2015",
    "lib": [
      "ES2021",
      "DOM"
    ],
    "moduleResolution": "Node",
    "noImplicitAny": true,
    "noImplicitOverride": true,
    "noImplicitThis": true,
    "noImplicitReturns": true,
    "removeComments": false,
    "alwaysStrict": true,
    "strict": true,
    "allowJs": true,
    "outDir": "src/main/resources/web/js"
  },
  "include": [
    "src/main/typescript/web/js/**.ts",
    "src/main/typescript/web/js/**.js"
  ]
}